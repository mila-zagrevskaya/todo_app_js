{
    "extends":  [
        "airbnb/base"
    ],
    "plugins": ["prettier"],
    "parser": "babel-eslint",
    "env": {
        "browser": true
    },
    "rules": {
        "no-console": ["off"],
        "generators":  ["off"],
        "no-unused-expressions": [true,  "allow-fast-null-checks"],
        "class-methods-use-this": ["off", { "exceptMethods": ["<...exceptions>"] }],
        "no-unused-vars": ["off", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
        "array-callback-return": ["off", {"allowImplicit": false}],
        "import/no-cycle": 1,
        "import/prefer-default-export": "off",
    },
}
